<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="760" prefWidth="1280" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.DashboardController">
    <stylesheets>
        <URL value="@dashboard.css" />
    </stylesheets>
   <children>
      <BorderPane fx:id="borderpane" prefHeight="760.0" prefWidth="1280.0">
         <left>
            <VBox fx:id="vbox" prefHeight="760.0" prefWidth="328.0" style="-fx-background-color: #1b1b1b;" BorderPane.alignment="CENTER">
               <children>
                  <Pane fx:id="mainpane" prefHeight="199.0" prefWidth="328.0">
                     <children>
                        <ImageView fx:id="logo" fitHeight="35.0" fitWidth="200.0" layoutX="64.0" layoutY="45.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@Assets/logowpng.png" />
                           </image>
                        </ImageView>
                     </children>
                  </Pane>
                  <Button fx:id="addbutton" alignment="BASELINE_LEFT" graphicTextGap="20.0" mnemonicParsing="false" onAction="#addinterface" prefHeight="63.0" prefWidth="334.0" stylesheets="@ajoutpost.css" text="Add Post" textFill="WHITE">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView fill="#fffdfd" glyphName="PLUS" size="20" />
                     </graphic>
                  </Button>
                  <Button fx:id="showbutton" alignment="BASELINE_LEFT" graphicTextGap="20.0" mnemonicParsing="false" onAction="#showinterface" prefHeight="63.0" prefWidth="331.0" stylesheets="@ajoutpost.css" text="Show Feed" textFill="WHITE">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="TV" size="20" />
                     </graphic>
                  </Button>
                  <Button fx:id="statsbutton" alignment="BASELINE_LEFT" graphicTextGap="20.0" mnemonicParsing="false" onAction="#statsinterface" prefHeight="63.0" prefWidth="333.0" stylesheets="@ajoutpost.css" text="Stats Posts" textFill="WHITE">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="DASHBOARD" size="20" />
                     </graphic>
                  </Button>
                  <Button fx:id="homePage" alignment="BASELINE_LEFT" graphicTextGap="20.0" mnemonicParsing="false" onAction="#backhome" prefHeight="63.0" prefWidth="333.0" stylesheets="@ajoutpost.css" text="Home Page" textFill="WHITE">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="HOME" size="20" />
                     </graphic>
                  </Button>
               </children>
            </VBox>
         </left>
      </BorderPane>
   </children>
</AnchorPane>
